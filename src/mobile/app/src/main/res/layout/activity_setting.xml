<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_01"
    tools:context="com.legendaryenigma.firealarm.SettingActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/alarm"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_wifi_setting"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Wifi Setting"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFF00"
        />

    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Wifi name"
        android:layout_below="@id/tv_wifi_setting"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/et_wifi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/tv_wifi_setting"
        android:layout_toRightOf="@id/tv_wifi_name"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:id="@+id/tv_wifi_pass"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Wifi Setting"
        android:layout_below="@id/tv_wifi_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/et_pass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/tv_wifi_name"
        android:layout_toRightOf="@id/tv_wifi_pass"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn_wifi_update"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#0022ff"
        android:text="Update"
        android:layout_below="@+id/et_pass"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/et_pass"
        />

    <TextView
        android:id="@+id/tv_phone_setting"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Phone Number Setting"
        android:layout_below="@id/btn_wifi_update"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFF00"
        />


    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Phone"
        android:layout_below="@id/tv_phone_setting"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/tv_phone_setting"
        android:layout_toRightOf="@id/tv_phone"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:id="@+id/tv_phone_argency"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Phone Agency"
        android:layout_below="@id/tv_phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/et_phone_agency"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/tv_phone"
        android:layout_toRightOf="@id/tv_phone_argency"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn_phone_update"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#0022ff"
        android:text="Update"
        android:layout_below="@+id/et_phone_agency"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/et_pass"
        />

</RelativeLayout>